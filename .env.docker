# Configuración para Docker
# Renombra este archivo a .env para usarlo

# Zona horaria
TZ=America/Mexico_City

# Python
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1

# Base de datos
DB_PATH=/app/SERVITEC.DB

# Directorios
BACKUPS_DIR=/app/backups
REPORTS_DIR=/app/servitec_manager/reports
ORDERS_DIR=/app/servitec_manager/ordenes

# Configuración de la aplicación
APP_ENV=production
DEBUG=false
LOG_LEVEL=INFO

# Límites
MAX_BACKUP_SIZE=100MB
MAX_REPORT_AGE_DAYS=90
